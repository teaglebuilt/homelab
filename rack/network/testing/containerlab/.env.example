# Containerlab Environment Configuration Template
# Copy this file to .env and customize for your environment

# Lab Configuration
LAB_NAME=unifi-test-lab

# Container Images
FRR_IMAGE=frrouting/frr:latest
NETSHOOT_IMAGE=nicolaka/netshoot:latest
NGINX_IMAGE=nginx:alpine

# Network Configuration - Management
MGMT_NETWORK_NAME=unifi-mgmt
MGMT_SUBNET=172.20.10.0/24
MGMT_IP=172.20.10.1
MGMT_PREFIX=24
DEFAULT_GW=172.20.10.254

# Network Configuration - Trunk/Core
TRUNK_NETWORK=192.168.1.0
TRUNK_IP=192.168.1.1
TRUNK_PREFIX=24
DIST_SWITCH1_IP=192.168.1.10
DIST_SWITCH2_IP=192.168.1.11
ACCESS_SWITCH1_IP=192.168.1.20
ACCESS_SWITCH2_IP=192.168.1.21

# Network Configuration - Office VLAN
OFFICE_VLAN_ID=10
OFFICE_NETWORK=10.0.0.0
OFFICE_NETWORK_GW=10.0.0.1
OFFICE_PREFIX=24
OFFICE_CLIENT_IP=10.0.0.100
TEST_SERVER1_IP=10.0.0.50

# Network Configuration - Guest VLAN
GUEST_VLAN_ID=20
GUEST_NETWORK=10.0.1.0
GUEST_NETWORK_GW=10.0.1.1
GUEST_PREFIX=24
GUEST_CLIENT_IP=10.0.1.100
TEST_SERVER2_IP=10.0.1.50

# Network Configuration - DMZ
DMZ_NETWORK=192.168.100.0
DMZ_NETWORK_GW=192.168.100.1
DMZ_PREFIX=24
DMZ_CLIENT_IP=192.168.100.100

# Router Configuration
ROUTER_HOSTNAME=core-router
OSPF_ROUTER_ID=192.168.1.1

# FRR Daemon Configuration
ZEBRA_ENABLED=yes
BGP_ENABLED=no
OSPF_ENABLED=yes
OSPF6_ENABLED=no
RIP_ENABLED=no
RIPNG_ENABLED=no
ISIS_ENABLED=no
PIM_ENABLED=no
LDP_ENABLED=no
NHRP_ENABLED=no
EIGRP_ENABLED=no
BABEL_ENABLED=no
SHARP_ENABLED=no
STATIC_ENABLED=yes
PBR_ENABLED=no
BFD_ENABLED=no
FABRIC_ENABLED=no

# FRR Service Configuration
VTYSH_ENABLE=yes
ZEBRA_ADDR=127.0.0.1
ZEBRA_BUFFER=90000000
BGP_ADDR=127.0.0.1
OSPF_ADDR=127.0.0.1
STATIC_ADDR=127.0.0.1

# Port Configuration
FRR_VTYSH_PORT=2601
TEST_SERVER1_PORT=8081
TEST_SERVER2_PORT=8082

# Advanced Configuration
MTU_SIZE=9000

# Security Configuration (optional)
# VTY_PASSWORD=your-vty-password

# Custom FRR Configuration (optional)
# CUSTOM_CONFIG="! Custom configuration here"

# BGP Configuration (optional, if BGP_ENABLED=yes)
# BGP_CONFIG="router bgp 65001\n neighbor 192.168.1.2 remote-as 65002"
